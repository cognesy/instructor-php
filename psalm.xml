<?xml version="1.0"?>
<psalm
    errorLevel="6"
    resolveFromConfigFile="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
    findUnusedBaselineEntry="false"
    findUnusedCode="false"
    findUnusedVariables="false"
    findUnusedSuppressions="false"
    checkForThrowsDocblock="false"
    checkForThrowsInGlobalScope="false"
    ensureArrayStringOffsetsExist="false"
    ensureArrayIntOffsetsExist="false"
    strictBinaryOperands="false"
>
    <projectFiles>
        <directory name="packages/addons/src" />
        <directory name="packages/auxiliary/src" />
        <directory name="packages/config/src" />
        <directory name="packages/doctor/src" />
        <directory name="packages/dynamic/src" />
        <directory name="packages/evals/src" />
        <directory name="packages/events/src" />
        <directory name="packages/http-client/src" />
        <directory name="packages/hub/src" />
        <directory name="packages/instructor/src" />
        <directory name="packages/messages/src" />
        <directory name="packages/pipeline/src" />
        <directory name="packages/polyglot/src" />
        <directory name="packages/schema/src" />
        <directory name="packages/setup/src" />
        <directory name="packages/stream/src" />
        <directory name="packages/tell/src" />
        <directory name="packages/templates/src" />
        <directory name="packages/utils/src" />
        <directory name="config" />
        <ignoreFiles>
            <directory name="vendor" />
            <directory name="packages/experimental" />
            <!-- Exclude Laravel-specific files that require Laravel runtime -->
            <directory name="packages/auxiliary/src/Beads/Eloquent/Migrations" />
            <directory name="packages/auxiliary/src/Beads/Eloquent/Models" />
            <file name="packages/auxiliary/src/Beads/Presentation/BeadsServiceProvider.php" />
            <!-- Exclude ext-http driver (optional pecl extension) -->
            <directory name="packages/http-client/src/Drivers/ExtHttp" />
        </ignoreFiles>
    </projectFiles>
    <issueHandlers>
        <!-- Suppress covariance issues with generic state processors (AgentState vs object) -->
        <InvalidArgument>
            <errorLevel type="suppress">
                <referencedFunction name="Cognesy\Addons\AgentBuilder\AgentBuilder::addProcessor"/>
                <referencedFunction name="Cognesy\Addons\AgentBuilder\AgentBuilder::addContinuationCriteria"/>
                <referencedFunction name="Cognesy\Addons\StepByStep\Continuation\ContinuationCriteria::from"/>
                <!-- CachedContext type mismatch - needs API update -->
                <referencedFunction name="Cognesy\Instructor\StructuredOutput::withCachedContext"/>
            </errorLevel>
        </InvalidArgument>
        <!-- Suppress for Symfony 6/7 compatibility - getSupportedTypes exists only in Symfony 7 -->
        <MissingOverrideAttribute>
            <errorLevel type="suppress">
                <file name="packages/instructor/src/Deserialization/Deserializers/BackedEnumNormalizer.php"/>
                <file name="packages/instructor/src/Deserialization/Deserializers/FlexibleDateDenormalizer.php"/>
            </errorLevel>
        </MissingOverrideAttribute>
        <!-- Suppress edge cases with type inference -->
        <InvalidCast>
            <errorLevel type="suppress">
                <file name="packages/addons/src/Agent/Drivers/ToolCalling/ToolExecutionFormatter.php"/>
            </errorLevel>
        </InvalidCast>
    </issueHandlers>
</psalm>
