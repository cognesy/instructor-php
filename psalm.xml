<?xml version="1.0"?>
<psalm
    errorLevel="4"
    resolveFromConfigFile="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
    findUnusedBaselineEntry="true"
    findUnusedCode="true"
    findUnusedVariables="true"
    findUnusedSuppressions="true"
    checkForThrowsDocblock="true"
    checkForThrowsInGlobalScope="true"
    ensureArrayStringOffsetsExist="true"
    ensureArrayIntOffsetsExist="true"
    strictBinaryOperands="true"
>
    <projectFiles>
        <directory name="packages/addons/src" />
        <directory name="packages/auxiliary/src" />
        <directory name="packages/config/src" />
        <directory name="packages/doctor/src" />
        <directory name="packages/dynamic/src" />
        <directory name="packages/evals/src" />
        <directory name="packages/events/src" />
        <directory name="packages/experimental/src" />
        <directory name="packages/http-client/src" />
        <directory name="packages/hub/src" />
        <directory name="packages/instructor/src" />
        <directory name="packages/messages/src" />
        <directory name="packages/pipeline/src" />
        <directory name="packages/polyglot/src" />
        <directory name="packages/schema/src" />
        <directory name="packages/setup/src" />
        <directory name="packages/tell/src" />
        <directory name="packages/templates/src" />
        <directory name="packages/utils/src" />
        <directory name="config" />
        <directory name="examples" />
        <ignoreFiles>
            <directory name="vendor" />
        </ignoreFiles>
    </projectFiles>
</psalm>
