{
  "name": "cognesy/instructor-http-client",
  "license": "MIT",
  "description": "Polyglot's unified HTTP connectivity layer",
  "autoload": {
    "psr-4": {
      "Cognesy\\Http\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Cognesy\\Http\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.2",
    "cognesy/instructor-config": "^1.0",
    "cognesy/instructor-events": "^1.0",
    "cognesy/instructor-utils": "^1.0",
    "cognesy/instructor-setup": "^1.0"
  },
  "require-dev": {
    "guzzlehttp/guzzle": "^7.4",
    "guzzlehttp/psr7": "^2.7",
    "icanhazstring/composer-unused": "^0.9.0",
    "illuminate/http": "^12.20",
    "jetbrains/phpstorm-attributes": "^1.2",
    "maglnet/composer-require-checker": "^4.16",
    "mockery/mockery": "^1.6",
    "pestphp/pest": "^2.34",
    "phpstan/phpstan": "^1.11",
    "roave/security-advisories": "dev-latest",
    "symfony/http-client": "^7.3",
    "vimeo/psalm": "^6.0"
  },
  "scripts": {
    "tests": "@php vendor/bin/pest",
    "phpstan": "@php vendor/bin/phpstan -c phpstan.neon",
    "psalm": "@php vendor/bin/psalm"
  },
  "suggest": {
    "symfony/http-client": "For Symfony HTTP client support",
    "psr/http-message": "*",
    "psr/http-client": "*",
    "illuminate/http": "For Laravel HTTP client support"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    },
    "sort-packages": true
  },
  "minimum-stability": "RC",
  "prefer-stable": true
}
