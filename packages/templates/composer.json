{
  "name": "cognesy/instructor-templates",
  "description": "Text and chat template tools used by Instructor library",
  "license": "MIT",
  "homepage": "https://instructorphp.com",
  "support": {
    "issues": "https://github.com/cognesy/instructor-php/issues",
    "source": "https://github.com/cognesy/instructor-php"
  },
  "authors": [
    {
      "name": "Dariusz Debowczyk",
      "email": "ddebowczyk@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Cognesy\\Template\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Cognesy\\Template\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.2",
    "cognesy/instructor-config": "^1.5",
    "cognesy/instructor-messages": "^1.5",
    "cognesy/instructor-utils": "^1.5"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "icanhazstring/composer-unused": "^0.9.0",
    "jetbrains/phpstorm-attributes": "^1.2",
    "maglnet/composer-require-checker": "^4.16",
    "pestphp/pest": "^2.34",
    "phpstan/phpstan": "^1.11",
    "vimeo/psalm": "^6.0",
    "eftec/bladeone": "^4.16",
    "twig/twig": "^3.0"
  },
  "scripts": {
    "tests": "@php vendor/bin/pest",
    "phpstan": "@php vendor/bin/phpstan -c phpstan.neon",
    "psalm": "@php vendor/bin/psalm"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    },
    "sort-packages": true
  },
  "suggest": {
    "eftec/bladeone": "For BladeOne template engine support",
    "twig/twig": "For Twig template engine support"
  },
  "minimum-stability": "RC",
  "prefer-stable": true
}
