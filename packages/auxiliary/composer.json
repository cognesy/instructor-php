{
  "name": "cognesy/instructor-auxiliary",
  "description": "Collection of auxiliary services and integrations",
  "license": "MIT",
  "homepage": "https://instructorphp.com",
  "support": {
    "issues": "https://github.com/cognesy/instructor-php/issues",
    "source": "https://github.com/cognesy/instructor-php"
  },
  "authors": [
    {
      "name": "Dariusz Debowczyk",
      "email": "ddebowczyk@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Cognesy\\Auxiliary\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Cognesy\\Auxiliary\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.2",
    "ext-dom": "*",
    "cognesy/instructor-messages": "^1.5",
    "cognesy/instructor-utils": "^1.5",
    "guzzlehttp/psr7": "^2.7",
    "league/html-to-markdown": "^5.1",
    "phpdocumentor/reflection-docblock": "^5.4",
    "spatie/browsershot": "^5.0.6",
    "symfony/css-selector": "^7.2",
    "symfony/dom-crawler": "^7.1"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "icanhazstring/composer-unused": "^0.9.0",
    "jetbrains/phpstorm-attributes": "^1.2",
    "maglnet/composer-require-checker": "^4.16",
    "pestphp/pest": "^2.34",
    "phpstan/phpstan": "^1.11",
    "vimeo/psalm": "^6.0"
  },
  "scripts": {
    "tests": "@php vendor/bin/pest",
    "phpstan": "@php vendor/bin/phpstan -c phpstan.neon",
    "psalm": "@php vendor/bin/psalm"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    },
    "sort-packages": true
  },
  "minimum-stability": "RC",
  "prefer-stable": true
}
